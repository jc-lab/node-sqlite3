{
  "includes": [ "@CMAKE_CURRENT_SOURCE_DIR@/deps/common-sqlite.gypi" ],
  "variables": {
      "sqlite%":"internal",
      "sqlite_libname%":"sqlite3"
  },
  "targets": [
    {
      "target_name": "sqlite3",
      "include_dirs": [
        "@SQLITE_SRC_DIR@/include",
        "@OPENSSL_INC_DIR@",
        "<!(node -e \"require('nan')\")"
      ],
      "defines": [
          "SQLITE_HAS_CODEC=1",
          "SQLCIPHER_CRYPTO_OPENSSL=1"
          "SQLITE_THREADSAFE=1",
          "HAVE_USLEEP=1",
          "SQLITE_ENABLE_FTS3=1",
          "SQLITE_ENABLE_FTS4=1",
          "SQLITE_ENABLE_FTS5=1",
          "SQLITE_ENABLE_JSON1=1",
          "SQLITE_ENABLE_RTREE=1"
      ],
      "conditions": [
        [
          "OS!='win'",
          { "libraries+": [ "-L@OPENSSL_LIB_DIR@" ] }
        ]
      ],
      "libraries+": [ "@OPENSSL_LIB_DIR@/@LIBEAY_NAME@" ],
      "msvs_settings": {
        "VCLinkerTool": {
          "AdditionalLibraryDirectories": [
            "@OPENSSL_LIB_DIR@"
          ],
          "AdditionalDependencies": [ "@LIBEAY_NAME@" ]
        }
      },
      "cflags": [ "-include @BINDING_GCC_PREINCLUDE_FILE@" ],
      "sources": [
        @BINDING_GYP_SRC_LIST@
      ]
    },
    {
      "target_name": "copy_binary",
      "type": "none",
      "dependencies": [ "sqlite3" ],
      "copies": [
        {
          "files": [ "<(PRODUCT_DIR)/sqlite3.node" ],
          "destination": "@BINDING_OUT_DIR@"
        }
      ]
    }
  ]
}
